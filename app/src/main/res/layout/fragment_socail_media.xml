<?xml version="1.0" encoding="utf-8"?>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.SocialMediaFrag">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/skyblue"
                >


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/goback_socialmedia"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_arrow_back"
                    app:srcCompat="@drawable/ic_arrow_back"
                    app:tint="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Download From Social Media/WEBSITE"
                    android:textColor="#ffffff"
                    android:textSize="17.5sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/pg_bar_social_media"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progressTint="@color/skyblue"
                android:indeterminateTint="@color/skyblue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="0dp"
                android:text="@string/download_warning"
                android:textColor="@color/colorAccent" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ScrollView
                    android:id="@+id/downloads_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:id="@+id/cardfb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="50dp"
                        app:cardCornerRadius="10dp"
                        >

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <ImageView

                                android:id="@+id/img1"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/logo" />


                            <TextView

                                android:id="@+id/text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/img1"
                                android:gravity="center"
                                android:text="Download From Facebook"
                                android:textColor="@color/skyblue"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="50dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                               android:layout_below="@id/text1"
                                android:layout_toEndOf="@+id/img1"
                                android:gravity="center"
                                android:text="(Server 1)"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginLeft="100dp"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView

                        android:id="@+id/cardfb1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@+id/cardfb"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="393dp"
                            android:layout_height="match_parent">

                            <android.support.v7.widget.AppCompatImageView

                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/logo"
                                android:id="@+id/img2"/>


                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/img2"
                                android:gravity="center"
                                android:text="Download From Facebook "
                                android:textColor="@color/skyblue"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="50dp"/>

                            <TextView
                                android:id="@+id/text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/text2"
                                android:layout_toEndOf="@+id/img2"
                                android:gravity="center"
                                android:text="(Server 2)"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginLeft="100dp"/>

                            <TextView
                                android:layout_width="193dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text="Use this, if you was not able to download using server 1"
                                android:textAlignment="center"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/cardtwttr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/cardfb1"

                        >

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="70dp">

                            <android.support.v7.widget.AppCompatImageView

                                android:layout_width="70dp"


                                android:layout_height="70dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/twtr" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Download From Twitter"
                                android:textColor="@color/skyblue"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/insta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/cardtwttr"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp">

                            <android.support.v7.widget.AppCompatImageView

                                android:layout_width="70dp"


                                android:layout_height="70dp"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/insta" />


                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:text="Download From Instagram"
                                android:textColor="@color/skyblue"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardother"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/insta"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout

                            android:layout_width="300dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView

                                android:layout_width="259dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="5dp"

                                android:text="Download From Other Web Pages"
                                android:textColor="@color/skyblue"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                </ScrollView>

                <LinearLayout

                    android:id="@+id/layout_webview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:visibility="gone">

                    <WebView

                        android:id="@+id/web_view_socailmedia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_weight="1">

                    </WebView>
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

    </FrameLayout>
